<!DOCTYPE html>
<html>
  <head>
    <meta charset="{{site.charset}}" />
    {% if function('is_home') %}
      <title>{{site.name}} - {{site.description}}</title>
    {% elseif meta_title is defined %}
      <title>{{site.name}} - {{meta_title}}</title>
    {% else %}
      <title>{{ function('bloginfo') }} - {{ wp_title }}</title>
    {% endif %}
    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1, minimum-scale=1">
    <link rel="shortcut icon" href="{{site_favicon}}" />
    <link rel="pingback" href="{{site.pingback_url}}" />
    {{ wp_head }}
  </head>
  <body class="{{body_class}}" data-template="base.twig">
    <div class="page-wrapper">
      {% block header %}
        {% include 'header.twig' %}
      {% endblock %}

      {% block feature %}
      {% endblock %}

      {% set sidebar_acf = post.get_field('group_sidebar') %}
      {% set sidebar_wp = sidebar_active('sidebar-right') %}

      <main role="main" class="clearfix {{page_layout}} {% if  not function('is_page') %} container {% endif %} ">
        {% if (sidebar_acf is not empty) or (sidebar_wp is not empty) %}
          {% set main_content_class = 'col-md-9' %}
          <div class="row">
        {% endif %}

        <div class="main-content {{main_content_class}}">
          {% block content %}
            <div class="content-wrapper">
              {{context}}
            </div>
          {% endblock %}
        </div>

        {% if (sidebar_acf is not empty) or (sidebar_wp is not empty) %}
        <section class="sidebar-right col-md-3">
          <div class="sidebar-right__inner">
            {% block aside %}
            {% endblock %}
          </div>
        </section>
        {% endif %}

        {% if (sidebar_acf is not empty) or (sidebar_wp is not empty) %}
          </div>
        {% endif %}
      </main>

      {% block footer %}
        {% include 'footer.twig' %}
        {{ wp_footer }}
      {% endblock %}

      {% block footer_scripts %}
      {% endblock %}
    </div>
  </body>
</html>
