{% block header %}
  <header id="header" class="header clearfix bg--gradient-red">
    <div class="heade__top">
      <div class="container">
        {# {{function('icl_get_languages')|print_r}} #}
        {% include 'header-top-menu.twig' %}
        <div class="container">{{acfwidget('group_header_component', 'header_widget-2')}}</div>
        {% include 'searchform.twig' %}
      </div>
    </div>
    <div class="header__bottom">
      <div class="container">
        <div class="header__logo">
          {% if function('has_custom_logo') %}
            {{function('the_custom_logo')}}
          {% else %}
            <a href="{{ site.url }}">
              <img alt="{{ site.name }}" class="site-logo" src="{{ site_logo }}" alt="{{ site.name }}">
            </a>
          {% endif %}
          <div class="site-description">{{site.description}}</div>
        </div>

        {% block navigation %}
        {% include 'navigation.twig' %}
        {% endblock %}
      </div>
    </div>
  </header>
{% endblock %}
