{% block header %}
  <header id="header" class="header clearfix bg--gradient-red">
    <div class="header__top">
      <div class="container">
        <div class="header__top__content">
          {% include 'header-top-menu.twig' %}
          {{acfwidget('group_header_component', 'header_widget-2')}}
          {% include 'searchform.twig' %}
        </div>
      </div>
    </div>
    <div class="header__bottom">
      <div class="container">
        <div class="header__bottom__content">
          <div class="header__logo">
            {% if function('has_custom_logo') %}
            {{function('the_custom_logo')}}
            {% else %}
              <a class="site-logo" href="{{ site.url }}">
                <img alt="{{ site.name }}" src="{{ site_logo }}" alt="{{ site.name }}">
              </a>
            {% endif %}
            <div class="site-description"> <a href="{{ site.url }}">{{site.name}}</a></div>
          </div>

          {% block navigation %}
          {% include 'navigation.twig' %}
          {% endblock %}
        </div>
      </div>
    </div>
  </header>
{% endblock %}
