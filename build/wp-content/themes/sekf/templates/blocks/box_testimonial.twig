<div class="box-testimonial">
  <div class="container">
    <h2 class="box-title"> {{ box_testimonial_title }} </h2>
    <div class="box-testimonial__list">
    {% for item in box_testimonial_items %}
        <div class="box-testimonial__item col-md-4">
            {% if item.box_testimonial_quote %}
                <div class="box-testimonial__quote"> {{item.box_testimonial_quote}} </div>
            {% endif %}
            {% if item.box_testimonial_image %}
                <div class="box-testimonial__image"><img src=" {{item.box_testimonial_image}} "></div>
            {% else %}
                <div class="box-testimonial__image user-image-default"><img src=" {{item.box_testimonial_image}} "></div>
            {% endif %}
            <div class="box-testimonial__name"> {{ item.box_testimonial_name }} </div>
            <div class="box-testimonial__positon"> {{ item.box_testimonial_position }} </div>
        </div>
    {% endfor %}
    </div>
  </div>
</div>
