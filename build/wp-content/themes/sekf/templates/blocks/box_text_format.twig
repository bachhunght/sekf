<div class="box-text-format">
  <div class="container">
    {% for item in  text_format_field %}
      {% if item.text_editor_one_column %}
      <div class="row">
        <div class="col-sm-12"> {{ item.text_editor_one_column }} </div>
      </div>
    {% endif %}
    {% if item.text_editor_col_first or item.text_editor_col_seccond %}
      <div class="row">
        {% if item.text_editor_col_first  %}
          {% if item.text_editor_col_seccond  %}
            <div class="col-sm-6 col-first">{{ item.text_editor_col_first }}</div>
          {% else %}
            <div class="col-sm-12">{{ item.text_editor_col_first }}</div>
          {% endif %}
        {% endif %}
        {% if item.text_editor_col_seccond  %}
          {% if item.text_editor_col_first  %}
            <div class="col-sm-6 col-last">{{ item.text_editor_col_seccond }}</div>
          {% else %}
            <div class="col-sm-12">{{ item.text_editor_col_seccond }}</div>
          {% endif %}
        {% endif %}
      </div>
    {% endif %}
    {% endfor %}
  </div>
</div>
