<div class="box-service">
  <div class="container">
    <div class="row">
    {% for item in box_service_items %}
      <div class="box-service__item col-md-3">
        <div class="box-service__group">
          <div class="box-service__icon"><img src=" {{item.box_service_icon}} " alt=""></div>
          <h5 class="box-service__title"> {{ item.box_service_title }} </h5>
          <div class="box-service__description js-matchHeight"> {{ item.box_service_description }} </div>
          <div class="box-service__link"> <a href=" {{item.box_service_link}} ">{{ item.box_service_title_link }} </a></div>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>
