{% block searchform %}
  <div class="block-search">
  <div class="block-search__icon js-toggle">
    <i class="block-search__icon__icon fa fa-search "></i>
  </div>
  <form class="form-search" role="search" method="get" id="searchform" action="{{site.url}}">
    <input type="text" value="{{function('get_search_query')}}" name="s" id="s" placeholder="Search">
    <button type="submit" id="searchsubmit" value="Search" class="button postfix">Search</button>
  </form>
  </div>
{% endblock %}
