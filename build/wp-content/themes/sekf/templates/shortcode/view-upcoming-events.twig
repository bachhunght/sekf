<div class="views view-upcoming-event teaser-list {{ ajax_views }} ">
  {% for post in posts %}
    {# {{post|print_r}} #}
  <div class="teaser-list__item {{post.class|join(" ")}}">
    <div class="teaser-list__group">
      <span class="teaser-list__date none-lable"><span class="lable">Datum: </span> {{ post.group_category_events_0_datum|date('d.m.Y')}}</span>
      {% if  post.group_category_events_0_plats %}
        <span class="teaser-list__location"><span class="lable">Plats:</span>  {{post.group_category_events_0_plats}}</span>
      {% endif %}
    </div>
    <h3 class="teaser-list__title">{{post.title}}</h3>
    <div class="teaser-list__content"><p>{{post.content|excerpt(30)}}</p></div>
    <div class="teaser-list__more"><a href="{{post.link}}">read more</a></div>
  </div>
  {% endfor %}
</div>
