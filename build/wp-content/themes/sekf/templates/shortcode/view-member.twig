<div class="views {{ ajax_views }} box-member">
  <div class="container">
    {% for post in posts %}
      <div class=" box-member__item col-md-3 {{post.class|join(" ")}}">
      {% if post.thumbnail.src %}
        <div class="box-member__image">
          <img src="{{post.thumbnail.src}}" class="feature" />
        </div>
        {% endif %}
        <h3 class="box-member__name post-title">{{ post.title }}</h3>
        <div class="box-member__position">{{post.description_post_page}}</div>
        <div class="views_link"><a href=" {{post.link}} ">READ BIO</a></div>
      </div>
    {% endfor %}
  </div>
</div>
