{% extends 'layout.twig' %}
{% block content %}
  {% if title_option != "on" %}
    {% if post.title %}
    <h2 id="page-title" class="page-title">
      {{ post.title }}
    </h2>
    {% endif %}
  {% endif %}
  {% for post in posts %}
    {% if not function('is_page') %}
      <h3 class="post-title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
    {% endif %}
    {{ flexible_content('group_component') }}
    {{ flexible_content('view_component') }}
  {% endfor %}
{% endblock %}
