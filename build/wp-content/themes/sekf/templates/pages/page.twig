{% extends 'layout.twig' %}

{% block feature %}
  <div class="box-feature">
    <h1 class="post-detail-title">{{ post.head_banner_text }}</h1>
  </div>
{% endblock %}
{% block content %}
  {% if title_option != "on" %}
    {% if post.title %}
    <h1 id="page-title">
      {{ post.title }}
    </h1>
    {% endif %}
  {% endif %}

  {% for post in posts %}
    {% if not function('is_page') %}
      <h3 class="post-title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
    {% endif %}
    {{  post.post_content|shortcodes }}
    {{ flexible_content('group_field_page_types') }}
    {{ flexible_content('group_component') }}
    {{ flexible_content('view_component') }}
  {% endfor %}

  {% if function('comments_open') %}
  {% include 'comments.twig' %}
  {{ function('comment_form') }}
  {% endif %}

{% endblock %}

{% block aside %}
  {{ sidebar('sidebar-right') }}
  {{ flexible_content('group_sidebar')}}
{% endblock %}
