{% extends 'layout.twig' %}

{% block feature %}
  {% if post.head_banner_text %}
    <div class="box-feature">
      <div class="container">
        <h1 class="post-heightline-title">{{ post.head_banner_text }}</h1>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {% if title_option != "on" %}
    {% if post.title %}
    <h2 id="page-title" class="page-title">
      {{ post.title }}
    </h2>
    {% endif %}
  {% endif %}

  {% if function('is_front_page') %}
    {% else %}
      <div class="post-date"><span class="lable">PUBLISHED ON</span>{{ post.post_date|date('y.m.d')}}</div>
  {% endif %}

  {% for post in posts %}
    {% if not function('is_page') %}
      <h3 class="post-title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
    {% endif %}
    {{  post.post_content|shortcodes }}
    {{ flexible_content('group_field_page_types') }}
    {{ flexible_content('group_component') }}
    {{ flexible_content('view_component') }}
  {% endfor %}

  {% if function('comments_open') %}
  {% include 'comments.twig' %}
  {{ function('comment_form') }}
  {% endif %}

{% endblock %}

{% block aside %}
  {{ sidebar('sidebar-right') }}
  {{ flexible_content('group_sidebar')}}
{% endblock %}
