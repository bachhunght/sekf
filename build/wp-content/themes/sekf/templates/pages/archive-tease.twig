{% block content %}
  <div class="post post-{{ post.post_type }} teaser-list__item">
      <div class="teaser-list__group-content">
        <div class="test-wrapper">
          {% if post.thumbnail.src %}
            <div class="teaser-list__image"><img src="{{post.thumbnail.src}}" class="feature" /></div>
          {% endif %}
          <div class="teaser-list__date none-lable"><span class="lable">Publicerat: </span>{{ post.post_date|date('d.m.Y')}}</div>
          <h3 class="teaser-list__title views__title">{{post.title}}</h3>
          <div class="teaser-list__content views__content"><p>{{post.content|excerpt(30)}}</p></div>
          <div class="teaser-list__more"><a href="{{post.link}}">l√§s mer</a></div>
        </div>
      </div>
  </div>
{% endblock %}
