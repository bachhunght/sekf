{% extends 'layout.twig' %}

{% block feature %}
    <div class="box-feature">
      <div class="container">
        <h1 class="post-heightline-title">{{title}}</h1>
      </div>
    </div>
{% endblock %}

{% block content %}
  {# {% include 'searchform.twig' %} #}
  {% if posts %}
    <div class="teaser-list">
  {% for post in posts %}
    <div class="teaser-list__item">
      <h3 class="teaser-list__title"><a href="{{post.link}}">{{post.title}}</a></h3>
      <div class="teaser-list__date none-lable"><span class="lable">Publicerat: </span>{{ post.post_date|date('d.m.Y')}}</div>
      <div class="teaser-list__content"><p>{{post.content|excerpt(30)}}</p></div>
      <div class="teaser-list__more"><a href="{{post.link}}">read more</a></div>
    </div>
  {% endfor %}
  {% include 'pagination.twig' %}
  {% else %}
    <p>Sorry, no results were found!</p>
    </div>
  {% endif %}

{% endblock %}

