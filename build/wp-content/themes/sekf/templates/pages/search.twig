{% extends 'base.twig' %}

{% block content %}
  <h1 id="page-title">{{title}}</h1>
  {% include 'searchform.twig' %}
  {% if posts %}
  {% for post in posts %}
    <article>
      <h3><a href="{{post.link}}">{{ post.title }}</a></h3>
      <p>{{post.content|excerpt(30)}}</p>
    </article>
  {% endfor %}
  {% else %}
    <p>Sorry, no results were found!</p>
  {% endif %}
{% endblock %}
